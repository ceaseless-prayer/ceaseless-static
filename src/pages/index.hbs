<!-- Banner -->
      <section id="banner">
        <h2>{{ headline }}</h2>
        <p>{{ subhead }}</p>
        <ul class="actions">
          <li><a href="register.html" class="button special">{{ cta1 }}</a></li>
          <li><a href="#main" class="button">{{ cta2 }}</a></li>
        </ul>
      </section>


    <!-- Main -->
      <section id="main" class="container">

        <section class="box special">
          <header class="major">
            <h2>One simple habit can make a big difference</h2>
          </header>
          <div class="video-container">
            <iframe src="//voice.adobe.com/a/1VyoO/embed/" width="960" height="540" frameborder="0" allowfullscreen></iframe>
          </div>
          <hr/>
          <h3>We are already praying for <strong>over 130,000 friends</strong>.<br/>
              By joining, you can help us personally pray for <strong>everyone on earth</strong>.</h3>
          {{> call-to-action }}
        </section>

        <script type="text/javascript">
          $(document).ready(function() {
            $('.feature-gallery').magnificPopup({
              delegate: 'a', // the selector for gallery item
              type: 'image',
              gallery: {
                enabled:true
              }
            });
          });
        </script>

        {{md "src/content/index/features.md" }}
        <!--{{md "src/content/index/download.md" }}-->

        <section id="subscribe" class="box">
          <h2>Stay up to date</h2>
          <p>Sign up below to get the Ceaseless newsletter with news, tips and more (normally 1-2 emails a month).</p>
          {{> mail-chimp}}
        </section>

        <section id="letter" class="container">
          <section class="box">
            {{md "src/content/index/letter.md" }}
          </section>
        </section>
      </section>

      {{md "src/content/index/cta.md" }}

